        </div>\
    </div>\
</div>\

<<nobr>>
    <<set $seconds to random(4, 8)>>
    <<silently>>
        <<repeat 1s>>
            <<set $seconds to $seconds - 1>>
            <<if $seconds gt 0>>

            <<else>>
                <<switch $quarter>>
                    <<case 1>>
                        <<GoRandom "Q1">>
                    <</case>>
                    <<case 2>>
                        <<GoRandom "Q2">>
                    <</case>>
                    <<case 3>>
                        <<GoRandom "Q3">>
                    <</case>>
                    <<case 4>>
                        <<GoRandom "Q4">>
                    <</case>>
                <</switch>>
                <<stop>>
            <</if>>
        <</repeat>>
    <</silently>>
<</nobr>>