:: CalcResource [widget] {"position":"800,100","size":"100,100"}
<<widget "CalcResource">>
	<<set $energy to Math.clamp($energy += Number($args[0]), 0, 10)>>
    <<set $approval to Math.clamp($approval += Number($args[1]), 0, 10)>>
	<<set $workStyle to Math.clamp($workStyle += Number($args[2]), 0, 8)>>
    <<set $orientation to Math.clamp($orientation += Number($args[3]), 0, 8)>>
	<<updatemeter 'approval' `$approval / $maxApproval`>>
	<<updatemeter 'energy' `$energy / $maxEnergy`>>
<</widget>>